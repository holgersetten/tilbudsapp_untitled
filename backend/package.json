{
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-schedule": "^2.1.1",
    "playwright": "^1.50.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^23.2.0",
    "supertest": "^6.3.4"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:old": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:frontend": "jest tests/frontend"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "projects": [
      {
        "displayName": "backend",
        "testMatch": [
          "<rootDir>/tests/unit/**/*.test.js",
          "<rootDir>/tests/integration/**/*.test.js"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "frontend",
        "testMatch": [
          "<rootDir>/tests/frontend/**/*.test.js"
        ],
        "testEnvironment": "jsdom"
      }
    ]
  }
}
